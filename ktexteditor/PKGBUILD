pkgname=ktexteditor
_rcver=rc1
pkgver=5.69.0
pkgrel=1
pkgdesc='Advanced embeddable text editor'
arch=(x86_64)
url='https://community.kde.org/Frameworks'
license=(LGPL)
depends=(kparts syntax-highlighting libgit2 editorconfig-core-c)
makedepends=(git extra-cmake-modules doxygen qt5-tools qt5-doc)
groups=(kf5)
source=("git+https://anongit.kde.org/$pkgname.git#tag=v${pkgver}-$_rcver"
kdebug-417890.patch::"https://cgit.kde.org/ktexteditor.git/patch/?id=1527af3b5435c4592f8b8daf9ffc7304ec69b77b")
sha256sums=('SKIP'
            '6237b970de5edd0ad64979f6b11393c770a9fe7af65348d0140a2d1d62c2d438')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
