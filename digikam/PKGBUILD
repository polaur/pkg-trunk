prepare() {
  mkdir -p build

  msg "1"
  patch -d $pkgname-$_pkgver -p1 -i $srcdir/digikam-7.0.0-qt-5.15.patch
    msg "5"
#    patch -d $pkgname-$_pkgver -p1 -i $srcdir/kdebug-417737.patch
    msg "6"
#    patch -d $pkgname-$_pkgver -p1 -i $srcdir/kdebug-420430.patch
#    msg "7"
#    patch -d $pkgname-$_pkgver -p1 -i $srcdir/kdebug-420400.patch
    msg "8"
#    patch -d $pkgname-$_pkgver -p1 -i $srcdir/kdebug-420634.patch
  }

build() {
  cd build

  cmake ../$pkgname-$_pkgver \
    -DBUILD_TESTING=OFF \
    -DENABLE_KFILEMETADATASUPPORT=ON \
    -DENABLE_MEDIAPLAYER=ON \
    -DENABLE_AKONADICONTACTSUPPORT=ON \
    -DENABLE_MYSQLSUPPORT=ON \
    -DENABLE_APPSTYLES=ON \
    -DENABLE_QWEBENGINE=ON \
    -DOpenGL_GL_PREFERENCE=GLVND
  make 
  }

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
