prepare() {
  mkdir -p build
  
  cd $pkgname-$pkgver
  msg "Applying kdebug 419178 patch; fix in 5.19"
  patch -p1 -i ../kdebug-419178.patch
  msg "Applying kdebug 419118 patch; fix in 5.19"
  patch -p1 -i ../kdebug-419118.patch
  msg "Applying kdebug 419595 patch"
  patch -p1 -i ../kdebug-419595.patch
#  msg "Applying kdebug 387160 and 414567 patch; fix in 5.19.0"
#  patch -p1 -i ../kdebug-387160.patch
#  msg "Applying kdebug 417936 patch"
#  patch -p1 -i ../kdebug-417936.patch
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  make -j2
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
