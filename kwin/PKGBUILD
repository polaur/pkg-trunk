prepare() {
  mkdir -p build
  
  cd $pkgname-$pkgver
#  patch -p1 -i ../fix-build.patch
  msg "Applying kdebug 421053 patch; fix in 5.18.6"
  patch -p1 -i ../kdebug-421053.patch
  msg "Applying kdebug 419178 patch; fix in 5.19"
  patch -p1 -i ../kdebug-419178.patch
  msg "Applying kdebug 403843 patch; fix in 5.19"
  patch -p1 -i ../kdebug-403843.patch
#  msg "Applying kdebug 419595 patch"
#  patch -p1 -i ../kdebug-419595.patch
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  make -j2
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
