pkgname=kwin
pkgver=5.18.4.1
pkgrel=5.1
pkgdesc='An easy to use, but flexible, composited Window Manager'
arch=(x86_64)
url='https://www.kde.org/workspaces/plasmadesktop/'
license=(LGPL)
depends=(kscreenlocker xcb-util-cursor plasma-framework kcmutils breeze kinit qt5-sensors qt5-script)
makedepends=(extra-cmake-modules qt5-tools kdoctools)
optdepends=('qt5-virtualkeyboard: virtual keyboard support for kwin-wayland')
groups=(plasma)
source=("https://download.kde.org/stable/plasma/${pkgver%.*}/$pkgname-$pkgver.tar.xz"{,.sig}
kdebug-419178.patch::"https://cgit.kde.org/kwin.git/patch/?id=754b90c72f8c73d8dcf7091fba82309d21aebbb5"
kdebug-419118.patch::"https://cgit.kde.org/kwin.git/patch/?id=0a65681596c3289df607619adb6971e8d48259d0"
kdebug-387567.patch::"https://cgit.kde.org/kwin.git/patch/?id=51a1e06dfc1fb8832c89d5f8a4abf24ff56bb32c"
kdebug-419595.patch::"https://cgit.kde.org/kwin.git/patch/?id=77782efc1fa4d59232bee08143c74a29f27d0c6f"
kdebug-387160.patch::"https://cgit.kde.org/kwin.git/patch/?id=51a1e06dfc1fb8832c89d5f8a4abf24ff56bb32c"
kdebug-417936.patch::"https://cgit.kde.org/kwin.git/patch/?id=26ce4869a09e0061061c3f1e2cf2333a4ab1eb02")
install=$pkgname.install
