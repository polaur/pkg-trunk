prepare() {
  cd "$pkgname-$pkgver"
  patch -Np1 < ../0001-trigger.patch
  patch -Np1 < ../0002-mkinitcpio-drop-fallback-images.patch
  patch -Np1 < ../0003-update-examples-with-microcode.patch
  patch -Np1 < ../0004-systemd-258.patch
  patch -Np1 < ../0005-fix-tpmfiles.patch
}

check() {
  make -C "$pkgname-$pkgver" check
}

package() {
  make -C "$pkgname-$pkgver" DESTDIR="$pkgdir" install
}
