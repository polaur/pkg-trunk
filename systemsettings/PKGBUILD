pkgname=systemsettings
pkgver=5.19.90
pkgrel=1.3
pkgdesc='KDE system manager for hardware, software, and workspaces'
arch=(x86_64)
url='https://www.kde.org/workspaces/plasmadesktop/'
license=(LGPL)
depends=(plasma-workspace)
makedepends=(extra-cmake-modules kdoctools)
groups=(plasma)
source=("https://download.kde.org/unstable/plasma/$pkgver/$pkgname-$pkgver.tar.xz"{,.sig}
kdebug-426731.patch::"https://invent.kde.org/plasma/systemsettings/commit/9eb9aa4490680ab3ef5df998ae8eeeca8e39fd3d.patch"
kdebug-426747.patch::"https://invent.kde.org/plasma/systemsettings/commit/5b4df5156370feed1563e7b937d405f06d4e98ec.patch"
kdebug-426742.patch::"https://invent.kde.org/plasma/systemsettings/commit/4f28476ddae53c745dcaf1f66cd2dc68e75727dc.patch"
kdebug-420196.patch::"https://invent.kde.org/plasma/systemsettings/commit/d923aeec835d6a9c195846a00e16566de0af901c.patch")
sha256sums=('2d36c805137f6308b5ae0771ba08a92b77709981152de621be43ab08b38a63ca'
