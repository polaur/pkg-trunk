prepare() {
    msg "Add kdebug 426731 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-426731.patch
    msg "Add kdebug 426747 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-426747.patch
    msg "Add kdebug 426742 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-426742.patch
    msg "Add kdebug 420196 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-420196.patch
}

build() {
  cmake -B build -S $pkgname-$pkgver \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
