pkgname=breeze-icons
pkgver=5.53rc.0
_tagver=v5.53.0-rc1
pkgrel=1.1
pkgdesc='Breeze icon themes'
arch=('any')
url='https://community.kde.org/Frameworks'
license=('LGPL')
groups=('kf5')
makedepends=('extra-cmake-modules' 'qt5-base' 'git')
source=("$pkgname-$_tagver::git://anongit.kde.org/$pkgname.git#tag=$_tagver"
kdebug-398975.patch::"https://cgit.kde.org/breeze-icons.git/patch/?id=b8d080c4e6a1aa8572e300240edaad807516c2f0")
sha256sums=('SKIP'
            '70d93ff23cec2e77b25904ca5f181641c9518b280b13e9f64aa55ecdbd9c492a')

prepare() {
  mkdir -p build
  
  cd $pkgname-$_tagver
  msg "Add kdebug 398975 patch; fix in 5.54"
  patch -p1 -i ../kdebug-398975.patch
}

build() {
  cd build
  cmake ../${pkgname}-${_tagver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBINARY_ICONS_RESOURCE=ON \
    -DBUILD_TESTING=OFF
  make -j5
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
