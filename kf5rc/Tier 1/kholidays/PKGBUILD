# made on original work by:
# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=kholidays
pkgver=5.44rc
_tagver=v5.44.0-rc1
pkgrel=1
epoch=1
pkgdesc="Library that provides a C++ API that determines holiday and other special events for a 
         geographical region.."
arch=(x86_64)
url="https://community.kde.org/KDE_PIM"
license=(LGPL)
depends=(qt5-declarative)
makedepends=(extra-cmake-modules qt5-declarative qt5-tools)
optdepends=('qt5-declarative: QML bindings')
source=("$pkgname-$_tagver::git://anongit.kde.org/$pkgname.git#tag=$_tagver")
sha256sums=('SKIP')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname-$_tagver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
