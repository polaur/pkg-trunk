pkgname=kdewebkit
pkgver=5.45rc
_tagver=v5.45.0-rc1
pkgrel=1
pkgdesc='KDE Integration for QtWebKit'
arch=('x86_64')
url='https://community.kde.org/Frameworks'
license=('LGPL')
depends=('qt5-webkit' 'kparts')
makedepends=('extra-cmake-modules' 'python' 'git')
groups=('kf5')
source=("$pkgname-$_tagver::git://anongit.kde.org/$pkgname.git#tag=$_tagver")
sha256sums=('SKIP')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../${pkgname}-${_tagver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
	-DECM_MKSPEC_INSTALL_DIR=/usr/lib/qt/mkspecs/modules \
	-DKDE_INSTALL_PLUGINDIR=/usr/lib/qt/plugins \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
