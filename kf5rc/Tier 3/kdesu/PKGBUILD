pkgname=kdesu
pkgver=5.44rc
_tagver=v5.44.0-rc1
pkgrel=1
pkgdesc='Integration with su for elevated privileges'
arch=('x86_64')
url='https://community.kde.org/Frameworks'
license=('LGPL')
depends=('kservice' 'kpty')
makedepends=('extra-cmake-modules' 'python' 'doxygen' 'qt5-tools')
groups=('kf5')
source=("$pkgname-$_tagver::git://anongit.kde.org/$pkgname.git#tag=$_tagver")
sha256sums=('SKIP')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../${pkgname}-${_tagver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install

# See FS#44277
  chown :nobody "${pkgdir}"/usr/lib/kf5/kdesud
  chmod g+s "${pkgdir}"/usr/lib/kf5/kdesud
}
